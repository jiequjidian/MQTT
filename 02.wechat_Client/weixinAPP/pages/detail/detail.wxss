  justify-content: space-between;
  box-sizing: border-box;
}
ec-canvas {
  width:100%;
  height:800rpx;
  /* margin-bottom: 80rpx */
}
.warp{
  height:100%;
  width:100%;
  display: flex;
  flex-direction: column;
  padding:0rpx;
}
.title{
  text-align:center;
  padding: 20rpx;
  font-size:30rpx;
  font-weight: bold;
}
.cTime{
  color:#aaa;
 font-size:24rpx;
}

